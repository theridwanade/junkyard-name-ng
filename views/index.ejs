<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "Junkyard – theridwanade’s Experimental Projects & Tools" %></title>
    <meta
            name="description"
            content="<%= description || 'Explore Junkyard by theridwanade – a space for experimental tools, scripts, and open-source projects built with Rust, TypeScript, Python and curiosity.' %>"
    />
    <meta name="keywords" content="Ridwan, Junkyard, Rust, TypeScript, Python, University of Ilorin, open source, CLI tools, Python, software engineer, MovieBox, Ordo" />
    <meta name="author" content="Ridwan" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://junkyard.name.ng/" />

    <meta property="og:title" content="Junkyard – Ridwan’s Experimental Projects & Tools" />
    <meta property="og:description" content="Explore the Junkyard — where Ridwan experiments with Rust, TypeScript, and Python. A collection of unfinished, unfiltered ideas that still work." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://junkyard.name.ng/" />

    <link rel="stylesheet" href="/main.css" />

    <!-- Structured Data (JSON-LD for Google) -->
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "Ridwan",
            "alternateName": "theridwanade",
            "url": "https://junkyard.name.ng/",
            "sameAs": [
                "https://github.com/theridwanade",
                "https://x.com/theridwanade",
                "https://linkedin.com/in/theridwanade/",
                "https://theridwanade.vercel.app/"
            ],
            "jobTitle": "Distributed Systems & Backend Engineer",
            "description": "Ridwan builds experimental tools, CLIs, and backend systems in Rust and TypeScript. Junkyard is his playground of ideas."
        }
    </script>

</head>
<body>
<!-- Hero Section -->
<section class="flex flex-col items-center justify-center text-center py-24 px-6">
    <h1 class="text-5xl font-bold mb-4 tracking-tight text-white">
        Welcome to Junkyard
    </h1>
    <p class="text-lg text-gray-400 max-w-2xl leading-relaxed">
        A small space where I drop the projects, tools, and random scripts I build, finished or not.
        Some useful, some experimental, all part of the process.
    </p>
    <div class="mt-6 text-gray-500 text-sm flex flex-wrap gap-2 justify-center">
        <span>Made by</span>
        <a
                href="https://theridwanade.vercel.app/"
                target="_blank"
                class="underline hover:text-white transition-colors"
        >Ridwan</a
        >
        <span>·</span>
        <a
                href="https://github.com/theridwanade"
                target="_blank"
                class="underline hover:text-white transition-colors"
        >GitHub</a
        >
        <span>·</span>
        <a
                href="https://x.com/theridwanade"
                target="_blank"
                class="underline hover:text-white transition-colors"
        >X</a
        >
    </div>
</section>

<!-- Divider -->
<hr class="border-gray-800 w-11/12 mx-auto mb-12" />

<!-- Projects Section -->
<section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 px-6 pb-20 max-w-6xl mx-auto w-full">
    <% if(projects.length !== 0) {%>
    <% projects.forEach(project => { %>
        <div
                class="bg-gray-900 rounded-2xl p-6 hover:bg-gray-800 transition-colors duration-300 flex flex-col justify-between shadow-md hover:shadow-lg"
        >
            <div>
                <a href="<%= project.viewPage %>" class="no-underline">
                <h2 class="text-2xl font-semibold mb-2 text-white"><%= project.name %></h2>
                <p class="text-gray-400 mb-4 text-sm leading-relaxed"><%= project.description %></p>
                </a>
            </div>
            <a
                    href="<%= project.link %>"
                    class="text-blue-400 hover:text-blue-300 hover:underline text-sm mt-auto"
                    target="_blank"
            >View Project on Github →</a
            >
        </div>
    <% }) } else { %>
        <p class="text-center text-gray-500 col-span-full">No projects available at the moment.</p>
    <% } %>
</section>
</body>
</html>
